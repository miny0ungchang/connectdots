<!-- Directly below is the div for the entire page -->
<div class="w-100 px-5 h-full d-flex justify-content-center main-wrapper linkberry-green-background py-32">



  <!-- Directly below is the left hand side box with the title, form -->
  <div class="m-1 w-100 h-100 d-flex justify-content-center align-items-center flex-column ">


    <div class="w-75">
      <h2 class="linkberry-title text-5xl text-gray-800">Ready to make the jump? Be among the first to join us!</h2>
      <p class="mt-4">While we polish the final details on our features, we would love to get to know you before we launch. </p>
    </div>


    <div class="w-75 mt-4">
      <%= simple_form_for @prospect do |f| %>
        <%= f.input :first_name, label_html: { class: 'text-gray-700' }, input_html: { class: 'form-input pill mt-1 block w-full rounded-lg p-2 border-gray-200 border' } %>
        <%= f.input :email, label_html: { class: 'text-gray-700' }, input_html: { class: ' pill mt-1 block w-full rounded-lg p-2 border-gray-200 border' } %>
        <%= f.input :profession, as: :radio_buttons, collection: Prospect.professions, wrapper_html: { class: 'flex inline-flex space-x-6' } %>
        <%= f.button :submit, 'Sign up!', class: 'flex justify-center text-center ml-28  w-2/4 rounded-2xl bg-blue-900 text-gray-800 font-bold p-2 uppercase text-white hover:bg-blue-800' %>
      <% end %>
    </div>

  </div>



